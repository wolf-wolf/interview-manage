<!--index.wxml-->
<view class="container">
  <view class="input-wrapper">
    <view class="input-inner-wrapper">
      <text class="input-label">公司名称：</text>
      <input class="input-field" model:value="{{companyName}}" auto-focus placeholder="请输入公司名称" />
    </view>
  </view>

  <view class="input-wrapper">
    <view class="input-inner-wrapper">
      <text class="input-label">猎头姓名：</text>
      <input class="input-field" model:value="{{guideName}}" placeholder="请输入猎头姓名" />
    </view>
  </view>

  <view class="input-wrapper">
    <view class="input-inner-wrapper">
      <text class="input-label">面试地点：</text>
      <input class="input-field" model:value="{{address}}" placeholder="面试地点" />
    </view>
  </view>

  <view class="input-wrapper">
    <view class="input-inner-wrapper">
      <text class="input-label">面试日期：</text>
      <picker mode="date" model:value="{{interDate}}" class="input-field date" placeholder="请选择面试日期">
        <text>{{interDate}}</text>
      </picker>
    </view>
  </view>

  <view class="input-wrapper">
    <view class="input-inner-wrapper">
      <text class="input-label">面试时间：</text>
      <picker mode="time" model:value="{{interTime}}" class="input-field" placeholder="请选择面试时间">
        <text>{{interTime}}</text>
      </picker>
    </view>
  </view>

  <button type="primary" bindtap="addInter">新增面试安排</button>
</view>