/**index.wxss**/
.container {
  padding: 16rpx 24rpx;
  width: 100vw;
  background: #fff;
}

.op-panel {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  border-bottom: 2rpx solid #efefef;
  padding-bottom: 16rpx;
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.op-panel .op-btn {
  border-radius: 4rpx;
  border: 4rpx solid #efefef;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8rpx 16rpx;
  box-sizing: border-box;
}

.top-panel {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.company-name {
  font-size: 48rpx;
  font-weight: bold;
  text-align: left;
  color: #333;
  width: 100%;
}

.base-info-panel {
  font-size: 24rpx;
  color: #666;
  width: 100%;
  padding: 16rpx 0rpx;
  border-bottom: 1px solid #efefef;
  margin-bottom: 28rpx;
  box-sizing: border-box;
}

.row {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 16rpx;
}

.col {
  width: 49%;
}

.content-wrapper {
  padding-bottom: 16rpx;
  border-bottom: 1px solid #efefef;
  margin-bottom: 28rpx;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  text-align: left;
  color: #333;
  width: 100%;
  margin-bottom: 16rpx;
}

.detail {
  font-size: 24rpx;
  text-align: left;
  color: #666;
  width: 100%;
  margin-bottom: 16rpx;
}