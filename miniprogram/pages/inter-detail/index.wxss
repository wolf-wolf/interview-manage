/**index.wxss**/
.container {
  width: 100vw;
}

.top-panel {
  width: 100%;
  padding-top: 32rpx;
  padding-bottom: 48rpx;
  background: #F9F8FD;
  box-shadow: 0 44rpx 70rpx -32rpx rgba(35, 35, 35, 0.15);
  border-radius: 0 0 48rpx 48rpx;
  margin-bottom: 84rpx;
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}

.left {
  width: 132rpx;
  margin-right: 56rpx;
  flex-grow: 0;
  display: flex;
  align-items: center;
  padding-top: 4rpx;
  justify-content: flex-end;
  flex-shrink: 0;
}

.right {
  flex-grow: 1;
  padding-right: 56rpx;
  text-align: justify;
}

.flag {
  width: 100%;
  height: 40rpx;
  background: #33357D;
  border-radius: 0 24rpx 24rpx 0;
}

.content-wrapper {
  padding: 0rpx 48rpx;
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 48rpx;
}