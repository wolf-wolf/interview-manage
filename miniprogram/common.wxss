.input-wrapper {
  height: 100rpx;
  width: 100%;
  padding-right: 36rpx;
  padding-left: 36rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.input-inner-wrapper {
  border-bottom: 2rpx solid #eeeeee;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
}

.input-field {
  box-sizing: border-box;
  font-size: 28rpx;
  text-align: right;
}

.textarea-wrapper {
  width: 100%;
  padding-right: 36rpx;
  padding-left: 36rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.textarea-inner-wrapper {
  border-bottom: 2rpx solid #eeeeee;
  width: 100%;
  height: 100%;
  padding-top: 36rpx;
}

.textarea-label {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  margin-bottom: 24rpx;
}

.textarea-field {
  min-height: 150rpx;
  width: 100%;
  box-sizing: border-box;
}

.container {
  box-sizing: border-box;
}

.card-panel {
  width: 100vw;
  margin-bottom: 24rpx;
  background: #fff;
}

.card-panel .textarea-wrapper:last-child .textarea-inner-wrapper,
.card-panel .input-wrapper:last-child .input-inner-wrapper {
  border-bottom: 0rpx;
}

.small-label {
  font-size: 24rpx;
  line-height: 1;
  color: #8788A1;
}

.main-title,
.sub-title {
  color: #313561;
  font-weight: bold;
}

.main-title {
  font-size: 48rpx;
  letter-spacing: 2.5rpx;
}

.sub-title {
  font-size: 40rpx;
  letter-spacing: 2.5rpx;
}

.content-noraml {
  font-size: 32rpx;
  color: #313561;
  letter-spacing: 2rpx;
  line-height: 1.5;
  font-weight: 400;
}