.input-wrapper {
  height: 100rpx;
  width: 100%;
  padding-right: 24rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.input-inner-wrapper {
  border-bottom: 2rpx solid #b1b1b1;
  width: 100%;
  height: 100%;
  display: inline-flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  white-space: nowrap;
}

.input-field {
  box-sizing: border-box;
  font-size: 28rpx;
  flex-grow: 1;
}

.container {
  box-sizing: border-box;
}